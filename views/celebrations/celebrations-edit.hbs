<div class="container">

    <div class="title row justify-content-center">
        <h2>Edit {{name}}</h2>
    </div>

    <div class="main celebration">
        <form method="POST" action="/celebrations/edit-celebration?celebration_id={{_id}}">
            <div class="form">
                <label>Celebration Name</label>
                <input type="text" class="form-control" name="name" value="{{name}}">
            </div>
            <div class="form">
                <label>Celebration Date</label>
                <input type="text" class="form-control" name="date" value="{{date}}">
            </div>
            <div class="form">
                <label>Celebration Description</label>
                <input type="text" class="form-control" name="description" value="{{description}}">
            </div>
            <div class="form-group form">
                <label>Traditions</label>
                <textarea class="form-control" id="text-area" rows="3">{{traditions}}</textarea>
                {{!-- <input type="textarea" class="form-control" name="traditions" value="{{traditions}}"> --}}
            </div>
            <div class="form">
                <label>Country/Countries</label>
                <input type="text" class="form-control" name="country" value="{{country}}">
            </div>
            {{!-- <div class="form">
            <label>Country/ Countries</label>
            <select class="form-control" name="country">
                <option>Choose</option>
                {{#each countries}}
                <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select> --}}
            {{!-- </div> --}}
    </div>

    <div class="row justify-content-center">
        <button type="submit" class="btn ">Edit Celebration</button>
    </div>

    </form>
</div>