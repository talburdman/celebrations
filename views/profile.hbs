<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <div class="title row justify-content-center">
                <h1>Welcome to your Profile {{user.username}}!</h1>
                <p>You are logged in as {{user.role}}</p>
            </div>

            <div class="main celebration">
                <h2>Account information</h2>
                <p>Name: {{user.name}}</p>
                <p>Description: {{user.description}}</p>
                <p>Email: {{user.email}}</p>
                <hr>
            </div>




            <div class="row justify-content-center">
                {{#if isAdmin}}

                <a href="/admin/users-list" class="btn">See all users</a>
                <a href="/admin/edit-user" class="btn">Edit user</a>
                <a href="/admin/delete-user" class="btn btn-danger">Delete user</a>

                {{/if}}
            </div>

            <div class="row justify-content-center">
                <a href="/close" class="btn ">Close session</a>
            </div>


        </div>
    </div>
</div>